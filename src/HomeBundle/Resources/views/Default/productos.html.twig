{% extends 'lay_iridian.html.twig' %}


{% block content %}
    {% set lc = app.request.locale() %}
    <div class="container" style="margin-top: 300px;">
        <div class="row">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>SKU</th>
                    <th>NOMBRE</th>
                    <th>VER</th>
                </tr>
                </thead>
                <tbody>
                {% for item in productos %}
                    <tr>
                        <td>{{ item.sku }}</td>
                        <td>{{ item.nombreEs }}</td>
                        <td><a href="{{ path('inventario_detalle',{sku:item.sku}) }}" target="_blank"><i class="fa fa-link" aria-hidden="true"></i></a> </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}
