{% extends 'lay_iridian.html.twig' %}


{% block content %}
    {% set lc = app.request.locale() %}
    <div class="container" style="margin-top: 300px;">
        <div class="row">
            <h1>{{ producto.nombreEs }}</h1>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>TALLA</th>
                    <th>COLOR</th>
                    <th>CANTIDAD</th>
                </tr>
                </thead>
                <tbody>
                {% for item in inventarios %}
                    <tr>
                        <td>{{ item.talla }}</td>
                        <td>{{ item.color }}</td>
                        <td>{{ item.cantidad }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>


{% endblock %}
