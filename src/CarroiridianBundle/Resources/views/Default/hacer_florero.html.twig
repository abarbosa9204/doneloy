{% extends 'lay_iridian.html.twig' %}

{% block content %}
    {% set categoria = app.request.get('categoria') %}
    {% set genero = app.request.get('genero') %}
    {% set lc = app.request.locale() %}
    {% set productos = ci.productos() %}
    <div class="banner banner3">
        <div class="opacicidad"></div>
        <div  class="item" style="background-image: url({{ qi.imagen('banner_taller_flores')|imagine_filter('banner') }})">
            <div class="no_header">
                <div class="center_H">
                    <h1>{{ qi.textoDB('titulo_taller_flores') }}</h1>
                </div>
            </div>
            {% include('@Home/Default/breadcrumb.html.twig') %}
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="txt_dead_product">
                    {{ qi.textoBigDB('texto_hacer_florero')|raw }}
                </div>
            </div>
            <div class="col-xs-12 producto">

                {% include('@Carroiridian/Default/filtro.html.twig') %}

                <div class="gal">
                    <div class="banner banner4">
                        <div class="item" style="background-image: url({{ qi.imagen('banner_hacer_florero') }})">
                            <div class="center_H">
                                <h2>{{ qi.textoDB('titulo_link_hacer_flores') }}</h2>
                            </div>
                        </div>
                    </div>

                    <div class="como_hacer_florero_HAO">

                        <h3>materiales</h3>

                        {% for item in qi.galeria('galeria_materiales') %}
                        <div class="material">
                            <img src="{{ item.imagen }}"/>
                            <p>{{ item.resumen }}</p>
                        </div>
                        {% endfor %}

                        <h3>PASO A PASO</h3>

                        <div class="rota_pasos">
                            <div class="swiper-wrapper">
                            {% for item in qi.galeria('paso_paso') %}
                            <div class="item swiper-slide">
                                <img src="{{ item.imagen|imagine_filter('img_pasos') }}">
                                <div class="txt">
                                    <div class="bot">
                                        <h3>{{ item.titulo }}</h3>
                                        <p>{{ item.resumen }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                            </div>
                            <div class="control">
                                <a class="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
                                <div class="pagination"></div>
                                <a class="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="link_boutique">
                    <div class="item video_l">
                        <img src="{{ qi.imagen('imagen_link_video_cuidado_flores')|imagine_filter('link_somos') }}"/>
                        <img class="ico_play" src="/images/ico_play.png"/>
                        <a href="#video_view" data-video="https://www.youtube.com/embed/pl2cSkqRwts?enablejsapi=1&version=3&playerapiid=ytplayer" class="hover"></a>
                        <h3>{{ qi.textoDB('titulo_link_cuidado_flores') }}</h3>
                    </div>
                    <div class="item">
                        <img src="{{ qi.imagen('imagen_link_plan_abasto')|imagine_filter('link_somos') }}"/>
                        <a href="{{ path('plan-abasto') }}" class="hover"></a>
                        <h3>{{ qi.textoDB('titulo_link_plan_abasto') }}</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}


