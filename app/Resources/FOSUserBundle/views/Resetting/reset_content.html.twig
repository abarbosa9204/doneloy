{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}
<div class="banner contacto">
    <div class="item" style="background-image: url({{ qi.imagen('banner_contacto') }})">
        <div class="no_header">

            <div class="center_H">

                <div class="container forgot_pass">

                    {{ form_start(form, { 'acti on': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                    {{ form_widget(form) }}
                    <div>
                        <input class="button" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                    </div>
                    {{ form_end(form) }}

                </div>

            </div>

        </div>
    </div>
</div>
