

{% block page_title %}Rosas Don Eloy{% endblock %}

{% block content_header %}
    <div class="row">
        <h1>Listado de facturas</h1>
    </div>
{% endblock content_header %}

{% block main %}
    {% set _list_item_actions = easyadmin_get_actions_for_list_item(_entity_config.name) %}

    <div class="table-responsive">
    <table class="table">
        <thead>
        {% block table_head %}
            <tr>
                <th>Id factura</th>
                <th>Nombre</th>
                <th>Documento</th>
                <th>Ref. PAYU</th>
                <th>Probar</th>
            </tr>
        {% endblock table_head %}
        </thead>

        <tbody>
        {% block table_body %}
            {% for item in facturas %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.nombre }}</td>
                    <td>{{ item.documento }}</td>
                    <td>Test_DE_{{ item.compra_id }}</td>
                    <td><a href="{{ path('easyadmin',{action:'list'}) }}" target="_blank"><i class="fa fa-link" aria-hidden="true"></i></a> </td>
                </tr>
            {% endfor %}
        {% endblock table_body %}
        </tbody>
    </table>
    </div>

{% endblock main %}

